<div class="main yoyos-search">
  <div class="container">
    <h1 class="form-heading">ヨーヨーを探す</h1>
    <div class="form">
      <div class="form-body">
        <p>なにをお探しですか?</p>
        <%= form_tag(yoyos_search_path,:method => "get") do %>
        <%= text_field_tag :search %>
        <%= submit_tag "検索", :name => nil %>
        <% end %>
      </div>
    </div>

    <div class="search-results">
    <% @yoyos.each do |yoyo| %>
        <div class="yoyos-index-item">
          <div class="yoyo-left">
            <img src="<%= "/yoyo_images/#{yoyo.image_name}" %>">
          </div>
          <div class="yoyo-right">
            <%= link_to(yoyo.name, "/yoyos/#{yoyo.id}") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>